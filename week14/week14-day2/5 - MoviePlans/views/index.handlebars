<h1>Movies</h1>

<ul>
  {{#each movies}}
    <li>
      <p>
        {{this.id}}. {{this.movie}}

        <form action="/delete?_method=DELETE" method="POST">
          <input type="hidden" name="id" value="{{this.id}}">
          <button type="submit">Delete Movie!</button>
        </form>
      </p>
    </li>
  {{/each}}
</ul>

<h2>Watch List</h2>
<form method="POST" action="/create" class="button-size">
	<textarea type="text" name="movie"></textarea>
	<button type="submit">Save movie!</button>
</form>

<h2>Update movies list</h2>
<form action="/update?_method=PUT" method="POST" class="button-size">
  <input type="text" name="id" placeholder="id">
	<textarea type="text" name="movie" placeholder="movie"></textarea>
	<button type="submit">Update movie!</button>
</form>